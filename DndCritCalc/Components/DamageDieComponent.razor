<MudSelect T="@Dice"
           @bind-Value="@DamageDie.Die"
           Label="Dice">
    @foreach (var die in Enum.GetValues<Dice>())
    {
        <MudSelectItem Value="@die">
            @die.ToString()
        </MudSelectItem>
    }
</MudSelect>

<MudSelect T="@DamageType"
           @bind-Value="@DamageDie.DamageType"
           Label="Damage Type">
    @foreach (var dt in Enum.GetValues<DamageType>())
    {
        <MudSelectItem Value="@dt">
            @dt.ToString()
        </MudSelectItem>
    }
</MudSelect>

<MudNumericField Label="Quantity"
                 @bind-Value="@DamageDie.Quantity"
                 Min="1"
                 Max="@int.MaxValue"
                 Variant="Variant.Text"/>

<MudNumericField Label="Attack Modifier"
                 @bind-Value="@DamageDie.AttackModifier"
                 Min="0"
                 Max="@int.MaxValue"
                 Variant="Variant.Text"/>

<MudNumericField Label="Rolled Result"
                 @bind-Value="@DamageDie.RolledResult"
                 Min="0"
                 Variant="Variant.Text"/>

<MudSwitch Label="Include Ability Modifier"
           @bind-Value="@DamageDie.IncludeAbilityModifier"
           Color="@Color.Primary"/>

<MudSwitch Label="Include Attack Modifier"
           @bind-Value="@DamageDie.IncludeAttackModifier"
           Color="@Color.Primary"/>

<MudNumericField @bind-Value="@DamageDie.BonusDamage"
                 Label="Bonus Damage"
                 Min="0"
                 Max="@int.MaxValue"
                 Variant="Variant.Text"/>
